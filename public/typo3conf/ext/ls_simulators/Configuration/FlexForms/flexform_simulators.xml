<T3DataStructure>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Function</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>Select function</label>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0">
										<numIndex index="0">List</numIndex>
										<numIndex index="1">Simulators-&gt;list</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">Detail</numIndex>
										<numIndex index="1">Simulators-&gt;show</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">Slider</numIndex>
										<numIndex index="1">Simulators-&gt;slider</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</switchableControllerActions>

					<settings.header>
						<TCEforms>
							<label>Slider Title</label>
							<config>
								<default></default>
								<type>input</type>
								<size>250</size>
							</config>
						</TCEforms>
					</settings.header>

					<settings.linkTitle>
						<TCEforms>
							<label>Link title</label>
							<config>
								<default></default>
								<type>input</type>
								<size>250</size>
							</config>
						</TCEforms>
					</settings.linkTitle>

					<settings.detailPid>
						<TCEforms>
							<label>Detail Page Uid</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
							</config>
						</TCEforms>
					</settings.detailPid>
				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>